<odoo>
    <record id="view_teacher_form" model="ir.ui.view">
        <field name="name">teacher.form</field>
        <field name="model">teacher.teacher</field>
        <field name="arch" type="xml">
            <form string="Teacher">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="emp_id"/>
                        <field name="gender"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="subject_ids" widget="many2many_tags"/>
                        <field name="salary"/>
                        <field name="joining_date"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_teacher_list" model="ir.ui.view">
        <field name="name">teacher.list</field>
        <field name="model">teacher.teacher</field>
        <field name="arch" type="xml">
            <list string="Teachers">
                <field name="name"/>
                <field name="emp_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="salary"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="action_teacher" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">teacher.teacher</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="school_menu" name="School Management" sequence="1"/>
    <menuitem id="teacher_menu" name="Teachers" parent="school_menu"/>
    <menuitem id="teacher_menu_action" name="Manage Teachers" parent="teacher_menu" action="action_teacher"/>
    
    
</odoo>

<odoo>
    <record id="view_subject_form" model="ir.ui.view">
        <field name="name">subject.form</field>
        <field name="model">school.subject</field>
        <field name="arch" type="xml">
            <form string="Subject">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="course_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_subject_list" model="ir.ui.view">
        <field name="name">subject.list</field>
        <field name="model">school.subject</field>
        <field name="arch" type="xml">
            <list string="Subjects">
                <field name="name"/>
                <field name="code"/>
                <field name="course_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="action_subject" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="res_model">school.subject</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="subject_menu" name="Subjects" parent="school_teacher.school_menu"/>
    <menuitem id="subject_menu_action" name="Manage Subjects" parent="subject_menu" action="action_subject"/>
    
    
</odoo>

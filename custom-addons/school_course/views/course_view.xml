<odoo>
    <record id="view_course_form" model="ir.ui.view">
        <field name="name">course.form</field>
        <field name="model">school.course</field>
        <field name="arch" type="xml">
            <form string="Course">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="duration"/>
                        <field name="subject_ids" widget="many2many_list">
                            <list>
                                <field name="name"/>
                                <field name="code"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_course_list" model="ir.ui.view">
        <field name="name">course.list</field>
        <field name="model">school.course</field>
        <field name="arch" type="xml">
            <list string="Courses">
                <field name="name"/>
                <field name="code"/>
                <field name="duration"/>
            </list>
        </field>
    </record>

    <record id="action_course" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">school.course</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- <menuitem id="school_menu" name="Subjects and Course" sequence="1"/> -->
    <menuitem id="course_menu" name="Courses" parent="school_teacher.school_menu"/>
    <menuitem id="course_menu_action" name="Manage Courses" parent="course_menu" action="action_course"/>

    
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Define a separate timetable tree view -->
    <record id="view_school_timetable_dashboard_tree" model="ir.ui.view">
        <field name="name">school.timetable.dashboard.tree</field>
        <field name="model">school.timetable</field>
        <field name="arch" type="xml">
            <list string="Timetable">
                <field name="subject_id"/>
                <field name="time_slot"/>
                <field name="room_no"/>
                <field name="teacher_id"/>
            </list>
        </field>
    </record>



    <record id="view_student_dashboard_kanban" model="ir.ui.view">
        <field name="name">Student Dashboard Kanban</field>
        <field name="model">school.student.dashboard</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="user_id"/>
                <field name="class_id"/>
                <field name="timetable_today"/>
                <field name="attendance_today"/>
            </kanban>
        </field>
    </record>

    <record id="view_student_dashboard_form" model="ir.ui.view">
        <field name="name">Student Dashboard Form</field>
        <field name="model">school.student.dashboard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="student_id" readonly="1"/>
                    <field name="class_id" readonly="1"/>
                </group>
                <notebook>
                    <page string="Today's Timetable">
                        <field name="timetable_today" widget="many2many" mode="tree" context="{'tree_view_ref': 'school.view_school_timetable_dashboard_tree'}"/>
                    </page>
                    <page string="Today's Attendance">
                        <field name="attendance_today">
                            <list>
                                <field name="subject_id"/>
                                <field name="status"/>
                            </list>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

</odoo>
<odoo>
    <record id="view_attendance_form" model="ir.ui.view">
        <field name="name">attendance.form</field>
        <field name="model">school.attendance</field>
        <field name="arch" type="xml">
            <form string="Attendance">
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="class_id"/>
                        <field name="date"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_attendance_list" model="ir.ui.view">
        <field name="name">attendance.list</field>
        <field name="model">school.attendance</field>
        <field name="arch" type="xml">
            <list string="Attendance Records">
                <field name="student_id"/>
                <field name="class_id"/>
                <field name="date"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="action_attendance" model="ir.actions.act_window">
        <field name="name">Attendance</field>
        <field name="res_model">school.attendance</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- <menuitem id="school_menu" name="School Management Attendance"/> -->
    <menuitem id="attendance_menu" name="Attendance" parent="school_teacher.school_menu"/>
    <menuitem id="attendance_menu_action" name="Manage Attendance" parent="attendance_menu" action="action_attendance"/>

    
</odoo>

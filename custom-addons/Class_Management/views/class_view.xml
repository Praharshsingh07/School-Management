<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_school_class_form" model="ir.ui.view">
        <field name="name">school.class.form</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <form string="Class">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="teacher_id"/>
                        <field name="section_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View (Replaces Tree View) -->
    <record id="view_school_class_kanban" model="ir.ui.view">
        <field name="name">school.class.kanban</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_view">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="o_kanban_primary_left">
                                <strong><t t-esc="record.name.value"/></strong>
                                <br/>
                                <span><t t-esc="record.teacher_id.value"/></span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
